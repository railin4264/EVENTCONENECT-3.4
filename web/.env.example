# ==========================
# FRONTEND ENVIRONMENT VARIABLES
# ==========================
# Copy this file to .env.local and fill in the values

# === API Configuration ===
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:5000
# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:5000

# === Google Maps ===
# Get from: https://console.cloud.google.com/
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# === Google Analytics ===
# Get from: https://analytics.google.com/
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# === App Information ===
NEXT_PUBLIC_APP_NAME=EventConnect
NEXT_PUBLIC_APP_DESCRIPTION=Plataforma integral para descubrir eventos y conectar con tribus
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === Feature Flags ===
# Enable/disable features
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# === OAuth Providers ===
# Must match backend OAuth configuration
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id

# === Mapbox (Optional) ===
# Alternative to Google Maps
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token

# === Cloudinary ===
# For client-side image uploads
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# === Development ===
# Enable debug mode and dev tools
NEXT_PUBLIC_DEBUG_MODE=true