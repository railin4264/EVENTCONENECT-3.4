# ===== EVENTCONNECT v4.0.0 - CONFIGURACIÓN DE ENTORNO =====
# Copia este archivo a .env y configura las variables según tu entorno

# ===== CONFIGURACIÓN GENERAL =====
NODE_ENV=development
PORT=5000
API_VERSION=v1
APP_NAME=EventConnect
APP_VERSION=4.0.0

# ===== BASE DE DATOS =====
MONGODB_URI=mongodb://localhost:27017/eventconnect
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/eventconnect

# ===== REDIS =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== JWT =====
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===== CLOUDINARY =====
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===== EMAIL (NODEMAILER) =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@eventconnect.com

# ===== SMS (TWILIO) =====
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===== PUSH NOTIFICATIONS =====
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# ===== OAUTH 2.0 =====
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:5000/api/auth/facebook/callback

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# ===== MFA (TOTP) =====
TOTP_SECRET=your-totp-secret-key
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# ===== CORS =====
CORS_ORIGIN=http://localhost:3000,http://localhost:8081
CORS_CREDENTIALS=true

# ===== SECURITY =====
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log

# ===== MONITORING =====
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# ===== EXTERNAL APIS =====
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# ===== STORAGE =====
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime

# ===== WEBSOCKET =====
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# ===== CACHE =====
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=1000

# ===== COMPRESSION =====
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024

# ===== SSL/TLS =====
SSL_ENABLED=false
SSL_KEY_PATH=ssl/private.key
SSL_CERT_PATH=ssl/certificate.crt

# ===== BACKUP =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# ===== ENVIRONMENT SPECIFIC =====
# Development
DEV_DATABASE_URL=mongodb://localhost:27017/eventconnect_dev
DEV_REDIS_URL=redis://localhost:6379/1

# Staging
STAGING_DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/eventconnect_staging
STAGING_REDIS_URL=redis://staging-redis:6379

# Production
PROD_DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/eventconnect_prod
PROD_REDIS_URL=redis://prod-redis:6379

# ===== FEATURE FLAGS =====
FEATURE_MFA_ENABLED=true
FEATURE_OAUTH_ENABLED=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_GEOLOCATION=true
FEATURE_GAMIFICATION=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_INTERNATIONALIZATION=true
FEATURE_ACCESSIBILITY=true
FEATURE_PERFORMANCE_MONITORING=true

# ===== DEBUG =====
DEBUG=false
DEBUG_LEVEL=error
VERBOSE_LOGGING=false

# ===== TESTING =====
TEST_DATABASE_URL=mongodb://localhost:27017/eventconnect_test
TEST_REDIS_URL=redis://localhost:6379/2
TEST_EMAIL_ENABLED=false
TEST_SMS_ENABLED=false

# ===== DEPLOYMENT =====
DEPLOYMENT_ENVIRONMENT=development
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_VERSION=4.0.0
DEPLOYMENT_TIMESTAMP=2024-12-19T00:00:00Z

# ===== NOTAS IMPORTANTES =====
# 1. Cambia todas las claves secretas en producción
# 2. Usa variables de entorno del sistema cuando sea posible
# 3. Nunca commits archivos .env con claves reales
# 4. Configura HTTPS en producción
# 5. Revisa regularmente los permisos de archivos
# 6. Monitorea logs y métricas de seguridad
# 7. Mantén actualizadas todas las dependencias
# 8. Configura backups automáticos
# 9. Implementa monitoreo de salud de la aplicación
# 10. Configura alertas para eventos críticos