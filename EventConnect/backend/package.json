{
  "name": "eventconnect-backend",
  "version": "2.0.0",
  "description": "EventConnect AI Backend API - Enhanced Security & Performance",
  "main": "src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "build": "babel src -d dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "db:migrate": "node src/scripts/database.js migrate",
    "db:rollback": "node src/scripts/database.js rollback",
    "db:seed": "node src/scripts/database.js seed",
    "db:clear": "node src/scripts/database.js clear",
    "db:reset": "node src/scripts/database.js reset",
    "db:status": "node src/scripts/database.js status",
    "db:health": "node src/scripts/database.js health",
    "db:backup": "node src/scripts/database.js backup",
    "db:restore": "node src/scripts/database.js restore",
    "docker:build": "docker build -t eventconnect-backend .",
    "docker:run": "docker run -p 5000:5000 eventconnect-backend",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js"
  },
